{
  "compilerOptions": {
      "target": "ES6",
      "module": "es6",
      "moduleResolution": "classic",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "build",
      "sourceMap": false
  },
  "include": [
      "src/**/*", "main.ts"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}