{
    "compilerOptions": {
        "target": "ES6",
        "module": "amd",
        "moduleResolution": "classic",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outFile": "src/main.js",
        "sourceMap": false
    },
    "include": [
        "src/**/*", "src/main.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
  }